@model IEnumerable<Cleaner>

@*<link href="~/css/selectCleaner.css" rel="stylesheet" />*@
<div class="our-webcoderskull">
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">CleanerId</th>
            <th>Name</th>
            <th>Email</th>
            <th>Location</th>
            <th>IsCleaner</th>
            <th>ExperienceLevel</th>
            <th>Certificate</th>
            <th>BankAccount</th>
            <th>Morning</th>
            <th>Afternoon</th>
            <th>Night</th>
            <th>Afternoon</th>
            <th>Weekends</th>
            <th>Actions</th>
        </tr>

</div>
@foreach (var item in Model)
{<tr>
    <td class="text-right">@item.CleanerId</td>
    <td>@item.FirstName</td>
    <td>@item.Email</td>
    <td>@item.Location</td>
    <td>@item.IsCleaner</td>
    <td>@item.ExperienceLevel</td>
    <td>@item.Certificate</td>
    <td>@item.BankAccount</td>
    <td>@item.Morning</td>
    <td>@item.Afternoon</td>
    <td>@item.Night</td>
    <td>@item.Weekends</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" name="ProductId" value="@item.CleanerId" />

            <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@item.CleanerId">
                Edit
            </a>
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
}
</table>


