@model Cleaner

    <link href="~/css/CleanerForm.css" rel="stylesheet" />

    <form asp-action="Cleaner" method="post">
        <div class="container contact">
            <div class="row">
                <div class="col-md-3">
                    <div class="contact-info">
                        <h2>Apply with Us</h2>
                        <h4>We would love to hear from you !</h4>
                        <img src="~/images/cleaner.JPG" />
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="contact-form">
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="fname">First Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="fname" placeholder="Enter First Name" asp-for="@Model.FirstName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="lname">Last Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" asp-for="@Model.LastName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Email:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" placeholder="Enter email" asp-for="@Model.Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Phone:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="phonenumber" placeholder="Enter email" @Model.Phone>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Location:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="location" placeholder="Enter Location" @Model.Location>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">postal code:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="phonenumber" placeholder="Postal code" asp-for="@Model.PostalCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Certification number: </label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="phonenumber" placeholder="Enter email" asp-for="@Model.Certificate">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Bank Account: </label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="bank" placeholder="Enter email" asp-for="@Model.Certificate">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>